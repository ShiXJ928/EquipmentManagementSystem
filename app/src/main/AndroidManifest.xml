<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zq.ems">

    <!--TODO 第三步 配置权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 硬件加速对X5视频播放非常重要，建议开启 -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".acty.LoginActy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页-->
        <activity android:name=".acty.MainActy" />
        <!--读取文档-->
        <activity android:name=".acty.ReadWordActy" />
        <!--读取pdf-->
        <activity android:name=".acty.ReadPdfActy" />
        <!--教学视频-->
        <activity android:name=".acty.TeachingMateriaActy" />
        <!--单警装备列表-->
        <activity android:name=".acty.EquipmentListActy" />
        <!--提醒列表-->
        <activity android:name=".acty.RemindListActy" />
        <!--超期未归装备列表-->
        <activity android:name=".acty.OverdueEquipmentListActy" />
        <!--我的信息-->
        <activity android:name=".acty.MyInfoActy" />
        <!--修改密码-->
        <activity android:name=".acty.ChangePwdActy" />
        <activity android:name=".acty.RecordListActy" />
        <activity android:name=".acty.RecordInfoActy" />
        <!--维修申请-->
        <activity android:name=".acty.RepairApplyActy" />
        <!--保养申请-->
        <activity android:name=".acty.MaintainApplyActy" />
        <!--维修保养记录-->
        <activity android:name=".acty.MaintenanceRecordListActy" />
        <!--申请装备列表-->
        <activity android:name=".acty.ApplyEquipmentActy" />
        <!--确认申请-->
        <activity android:name=".acty.EnterApplyEquipmentActy" />
        <!--借出装备-->
        <activity android:name=".acty.LendEquipmentListActy" />
        <!--申请审批列表-->
        <activity android:name=".acty.ApplyListActy" />

        <!--视频-->
        <activity
            android:name="com.tencent.smtt.sdk.VideoActivity"
            android:alwaysRetainTaskState="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.tencent.smtt.tbs.video.PLAY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
